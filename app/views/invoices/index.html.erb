<div class="row">
  <div class="col-md-8 col-md-offset-2 no-padding">
        <div class="panel panel-default">
           <div class="panel-heading">
             <div class="container"><div class="col-md-10">
             <h3 class="panel-title">Invoices/Invoice-List</h3><br>
             <%= search_field_tag :search, nil ,:class => 'search rounded', size:60, placeholder: 'Search by customer name.......' %>
             <%= link_to 'New Invoice', new_invoice_path, class: "btn btn-success ti-plus pull-right" %>
             </div></div>
           </div>

           <div class="panel-body">
              <table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Invoice number</th>
      <th>Customer</th>
      <th>Products</th>
      <th>Total</th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date %></td>
        <td><%= invoice.invoice_number %></td>
        <td><%= invoice.customer %></td>
        <td><%= invoice.products.first.product_name rescue nil %></td>
        <td><%= invoice.total %></td>
      </tr>
    <% end %>
  </tbody>
</table>
           </div>
            <div class="panel-footer">
            <div class="container"><div class="col-md-10">
            <%= link_to '', new_invoice_path, class: "ti-arrow-right pull-right" %>
            <%= link_to '', products_path, class: "ti-arrow-left pull-right" %>
            </div></div>
            </div>
       </div>
     </div>
</div>
