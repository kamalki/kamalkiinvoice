<div class="row">
  <div class="col-md-8 col-md-offset-2 no-padding">
        <div class="panel panel-default">
           <div class="panel-heading">
             <div class="container"><div class="col-md-10">
             <h3 class="panel-title">Products/Product-List</h3>
             <div class="pull-right">
              <%= link_to 'New Product', new_product_path, class: "btn btn-success ti-plus" %>
             </div>
           </div></div>
           </div>
           <div class="panel-body">
                <table class="table table-hover table-bordered">
                <thead>
                  <tr>
                     <th>Product name</th>
                     <th>Rate</th>
                  </tr>
                 </thead>
                  <tbody>
                    <% @productss.each do |product| %>
                      <tr>
                        <td><%= product.product_name %></td>
                        <td><%= product.rate %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
           </div>
           <div class="panel-footer">
           <div class="container"><div class="col-md-10">
           <%= link_to '', invoices_path, class: "ti-arrow-right pull-right" %>
           <%= link_to '', new_product_path, class: "ti-arrow-left pull-right" %>
           </div></div>
           </div>
        </div>
    </div>
</div>

